<!doctype html>
<meta property="og:type" content="website">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:title" content="{{ title or site.name }}">
<meta property="og:description" content="{{ description or site.tagline }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:image" content="{{ site.url }}/assets/og-cover.jpg">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or site.name }}">
<meta name="twitter:description" content="{{ description or site.tagline }}">
<meta name="twitter:image" content="{{ site.url }}/assets/og-cover.jpg">


<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/icon.svg" type="image/svg+xml">
<link rel="apple-touch-icon" href="/apple-touch-icon.png">
<link rel="manifest" href="/site.webmanifest">


<link rel="stylesheet" href="/assets/app.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
<style>
  body {
    font-family: Inter, system-ui, Arial, Helvetica, sans-serif
  }
</style>


<script type="application/ld+json">
{
"@context": "https://schema.org",
"@type": "Organization",
"name": "{{ site.name }}",
"url": "{{ site.url }}",
"logo": "{{ site.url }}/assets/logo-ensight.svg",
"description": "{{ site.tagline }}",
"areaServed": "{{ site.region }}"
}
</script>
</head>

<body class="text-gray-800">
  <header class="max-w-6xl mx-auto px-4 py-5 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2">
      <img src="/assets/logo-ensight.svg" alt="{{ site.name }}" class="h-7 w-auto" loading="eager" width="112"
        height="28" />
      <span class="sr-only">{{ site.name }}</span>
    </a>
    <nav class="flex gap-6 text-sm">
      <a href="/portfolio/" class="hover:text-brand">Portfolio</a>
      <a href="/services/" class="hover:text-brand">Services</a>
      <a href="/about/" class="hover:text-brand">About</a>
      <a href="/faqs/" class="hover:text-brand">FAQs</a>
      <a href="/contact/" class="bg-brand text-white px-3 py-1.5 rounded hover:bg-brand-dark">Request Info</a>
    </nav>
  </header>


  <main>
    {{ content | safe }}
  </main>


  <footer class="mt-16 border-t">
    <div
      class="max-w-6xl mx-auto px-4 py-10 text-sm text-gray-500 flex flex-col md:flex-row gap-4 md:items-center md:justify-between">
      <p>© {{ '' | year }} {{ site.name }} · Part 107 Certified</p>
      <p>{{ site.region }}</p>
    </div>
  </footer>
</body>

</html>